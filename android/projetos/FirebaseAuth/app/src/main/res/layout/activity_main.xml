<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/lbEmail"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                tools:layout_editor_absoluteY="57dp" tools:layout_editor_absoluteX="40dp" android:id="@+id/txtEmail"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Senha"
                android:ems="10"
                android:id="@+id/lbSenha"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                tools:layout_editor_absoluteY="177dp" tools:layout_editor_absoluteX="41dp" android:id="@+id/txtPassw"/>
        <Button
                android:text="SignUp e Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="263dp"
                tools:layout_editor_absoluteX="39dp" android:id="@+id/btnSingUp"/>
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="323dp"
                tools:layout_editor_absoluteX="41dp" android:id="@+id/btnLogin"/>
        <Button
                android:text="Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnLoggof"/>
        <Button
                android:text="btnVerifyEmailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnVerifyEmailUser"/>
        <TextView
                android:text="Usuario Logado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="274dp"
                tools:layout_editor_absoluteX="224dp" android:id="@+id/lbUsuarioLogado"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="311dp"
                tools:layout_editor_absoluteX="223dp" android:id="@+id/lbEmailDoUsuarioLogado"/>
        <TextView
                android:text="lbEmailValidoSera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lbEmailValidoSera"
                tools:text="nao sei se o email he valido"/>
        <Button
                android:text="btnAlteraSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnAlteraSenha"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtNovaSenha"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>